---
nuage_zipped_files_dir: "/mnt/nfs/nuage-releases/VERSION/nuage-packed"
nuage_unzipped_files_dir: "/mnt/nfs/nuage-releases/VERSION/nuage-unpacked"
target_server_username: "root"
ansible_sudo_username: "root"
vsd_fqdn_global: {{ inventory_hostname }}-vsd1.example.com
mycis:
  - { hostname: {{ inventory_hostname }},
      target_server_type: "heat",
      ci_image: ci-centos7,
      ci_flavor: jenkins }
  - { hostname: {{ vrs_u14_target_server_name }},
      target_server_type: "heat",
      ci_image: ci-ubuntu14,
      ci_flavor: jenkins }
  - { hostname: {{ vrs_u16_target_server_name }},
      target_server_type: "heat",
      ci_image: ci-ubuntu16,
      ci_flavor: jenkins }
vsd_operations_list:
  - install
  - upgrade
myvsds:
  - { hostname: {{ inventory_hostname }}-vsd1.example.com,
      vmname: {{ inventory_hostname }}-vsd1.metro,
      upgrade_vmname: {{ inventory_hostname }}-vsd1-up.metro,
      target_server_type: "kvm",
      target_server: {{ target_server }},
      mgmt_ip: {{ network_address }}.211,
      mgmt_gateway: {{ target_server }},
      mgmt_netmask: 255.255.255.0 }
vsc_operations_list:
  - install
  - upgrade
myvscs:
  - { hostname: {{ inventory_hostname }}-vsc1.example.com,
      vmname: {{ inventory_hostname }}-vsc1.metro,
      target_server_type: "kvm",
      target_server: {{ target_server }},
      mgmt_ip: {{ network_address }}.214,
      mgmt_gateway: {{ target_server }},
      mgmt_netmask_prefix: 24,
      ctrl_ip: 192.168.100.204,
      ctrl_netmask_prefix: 24,
      vsd_fqdn: {{ inventory_hostname }}-vsd1.example.com,
      system_ip: 1.1.1.4,
      xmpp_username: vsc1,
      vsc_mgmt_static_route_list: [ 0.0.0.0/1, 128.0.0.1/1 ] }
  # - { hostname: {{ inventory_hostname }}-vsc2.example.com,
  #     vmname: {{ inventory_hostname }}-vsc2.metro,
  #     target_server_type: "kvm",
  #     target_server: {{ target_server }},
  #     mgmt_ip: {{ network_address }}.215,
  #     mgmt_gateway: {{ target_server }},
  #     mgmt_netmask_prefix: 24,
  #     ctrl_ip: 192.168.100.205,
  #     ctrl_netmask_prefix: 24,
  #     vsd_fqdn: {{ inventory_hostname }}-vsd1.example.com,
  #     system_ip: 1.1.1.5,
  #     xmpp_username: vsc2,
  #     vsc_mgmt_static_route_list: [ 0.0.0.0/1, 128.0.0.1/1 ] }
vsc_health_expected_bgp_admin_state: Up
vsc_health_expected_bgp_oper_state: Up
vsc_health_expected_xmpp_server_state: Functional
vsc_health_expected_num_host_vports: 0
vsc_health_expected_num_vm_vports: 0
vsc_health_expected_num_gateway_ports: 0
vrs_operations_list:
  - install
myvrss:
  - { vrs_os_type: el7,
      vrs_ip_list: [{{ target_server | default("0.0.0.0") }}],
      active_controller_ip: {{ network_address }}.214,
      standby_controller_ip: {{ network_address }}.214 }
  - { vrs_os_type: u14.04,
      vrs_ip_list: [{{ vrs_u14_target_server | default("0.0.0.0") }}],
      active_controller_ip: {{ network_address }}.214,
      standby_controller_ip: {{ network_address }}.214 }
  - { vrs_os_type: u16.04,
      vrs_ip_list: [{{ vrs_u16_target_server | default("0.0.0.0") }}],
      active_controller_ip: {{ network_address }}.214,
      standby_controller_ip: {{ network_address }}.214 }
vstat_operations_list:
  - install
  - upgrade
myvstats:
  - { hostname: {{ inventory_hostname }}-vstat1.example.com,
      vmname: {{ inventory_hostname }}-vstat1.metro,
      upgrade_vmname: {{ inventory_hostname }}-vstat1-up.metro,
      target_server_type: "kvm",
      target_server: {{ target_server }},
      mgmt_ip: {{ network_address }}.216,
      mgmt_gateway: {{ target_server }},
      mgmt_netmask: 255.255.255.0,
      vsd_fqdn: {{ inventory_hostname }}-vsd1.example.com }
mgmt_bridge: "mgmt"
data_bridge: "data"
access_bridge: "access"
images_path: "/var/lib/libvirt/images/"
ntp_server_list:
  - {{ target_server }}
  - 192.96.202.120
dns_server_list:
  - {{ target_server }}
  - 127.0.0.1
dns_domain: example.com
yum_proxy: "NONE"
os_auth:
  username: admin
  password: admin
  project_name: jen
  auth_url: 'http://10.0.0.4:5000/v2.0'
