target_server_type: {{ item.target_server_type }}
{% if item.target_server_type == "kvm" or item.target_server_type == "vcenter"%}
target_server: {{ item.target_server }}

mgmt_ip: {{ item.mgmt_ip }}
mgmt_gateway: {{ item.mgmt_gateway }}
mgmt_netmask: {{ item.mgmt_netmask }}
data_fqdn: {{ item.data_fqdn }}
data_ip: {{ item.data_ip }}
data_netmask: {{ item.data_netmask }}
data_subnet: {{ item.data_subnet }}
nsgv_ip: {{ item.nsgv_ip }}
nsgv_mac: '{{ item.nsgv_mac }}'
nsgv_host_name: {{ item.nsgv_hostname }}
{% if nsgv_fqdn is defined %}
nsgv_fqdn: {{ item.nsgv_fqdn }}
{% endif %}
vsd_fqdn: {{ item.vsd_fqdn }}

{% if item.target_server_type == "kvm" %}
vnsutil_qcow2_path: {{ vnsutil_qcow2_path }}
vnsutil_qcow2_file_name: {{ vnsutil_qcow2_file_name }}
{% endif %}
{% if item.target_server_type == "vcenter" %}
vnsutil_ova_path: {{ vnsutil_ova_path }}
vnsutil_ova_file_name: {{ vnsutil_ova_file_name }}
{% if item.vcenter is defined %}
vcenter:
  username: {{ item.vcenter.username | default('NONE') }}
  password: {{ item.vcenter.password | default('NONE') }}
  datacenter: {{ item.vcenter.datacenter | default('NONE') }}
  cluster: {{ item.vcenter.cluster | default('NONE') }}
  datastore: {{ item.vcenter.datastore | default('NONE') }}
{% endif %}
{% endif %}

{% if vsd_sa_or_ha is defined %}
vsd_sa_or_ha: {{ vsd_sa_or_ha }}
{% else %}
vsd_sa_or_ha: sa
{% endif %}

{% endif %}
