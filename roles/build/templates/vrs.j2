{% set vrs_arch = item.0.vrs_os_type %}
vrs_arch: {{ vrs_arch }}
node_ip_addr: {{ item.1 }}
active_controller_addr: {{ item.0.active_controller_ip }}
standby_controller_addr: {{ item.0.standby_controller_ip }}
{% if vrs_arch|string() == "el6" %}
vrs_package_path: {{ el6_vrs_package_path }}
vrs_package_file_name_list:
{% for el6_file_name in el6_vrs_package_file_name_list %}
  - {{ el6_file_name }}
{% endfor %}
{% elif vrs_arch|string() == "el7" %}
vrs_package_path: {{ el7_vrs_package_path }}
vrs_package_file_name_list:
{% for el7_file_name in el7_vrs_package_file_name_list %}
  - {{ el7_file_name }}
{% endfor %}

# JvB added for AVRS on EL7
{% if 'avrs' in item.0 and item.0.avrs %}
el7_avrs_package_files: 
{% for f in el7_avrs_package_files %}
  - {{ f }}
{% endfor %}
el7_avrs_package_6wind_files: 
{% for f in el7_avrs_package_6wind_files %}
  - {{ f }}
{% endfor %}
el7_avrs_package_6wind_va_files: 
{% for f in el7_avrs_package_6wind_va_files %}
  - {{ f }}
{% endfor %}
{% endif %}

{% elif vrs_arch|string() == "u14.04" %}
vrs_package_path: {{ u14_04_vrs_package_path }}
vrs_package_file_name_list:
{% for u14_04_file_name in u14_04_vrs_package_file_name_list %}
  - {{ u14_04_file_name }}
{% endfor %}
{% elif vrs_arch|string() == "u16.04" %}
vrs_package_path: {{ u16_04_vrs_package_path }}
vrs_package_file_name_list:
{% for u16_04_file_name in u16_04_vrs_package_file_name_list %}
  - {{ u16_04_file_name }}
{% endfor %}
{% endif %}
{% set libnetwork_install = item.0.libnetwork_install | default(false) %}
{% if libnetwork_install %}
{% if vrs_arch|match("el6") or vrs_arch|match("el7") %}
libnetwork_package_path: {{ libnetwork_package_path }}
libnetwork_package_file_name: {{ libnetwork_package_file_name }}
{% elif vrs_arch|match("u14.04")%}
libnetwork_package_path: {{ u14_04_libnetwork_package_path }}
libnetwork_package_file_name: {{ u14_04_libnetwork_package_file_name }}
{% elif vrs_arch|match("u16.04")%}
libnetwork_package_path: {{ u16_04_libnetwork_package_path }}
libnetwork_package_file_name: {{ u16_04_libnetwork_package_file_name }}
{% endif %}
libnetwork_install: true
libnetwork_scope: {{ libnetwork.scope }}
libnetwork_cluster_store_url: {{ libnetwork.cluster_store_url }}
{% endif %}
