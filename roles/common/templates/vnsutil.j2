target_server_type: {{ item.target_server_type | default('kvm') }}
hostname: {{ item.hostname }}
{% if item.target_server_type | match("kvm") or item.target_server_type | match("vcenter") or item.target_server_type | match("aws") %}

target_server: {{ item.target_server }}
{% if not item.target_server_type | match("aws") %}
mgmt_gateway: {{ item.mgmt_gateway }}
mgmt_netmask: {{ item.mgmt_netmask }}
{% endif %}
mgmt_ip: {{ item.mgmt_ip }}

{% if item.vmname is defined %}
vmname: {{ item.vmname }}
{% else %}
vmname: {{ item.hostname }}
{% endif %}
{% if item.data_fqdn is defined %}
data_fqdn: {{ item.data_fqdn }}
{% endif  %}
{% if item.data_ip is defined %}
data_ip: {{ item.data_ip }}
data_netmask: {{ item.data_netmask }}
{% endif %}
{% if item.nsgv_ip is defined %}
nsgv_ip: {{ item.nsgv_ip }}
data_subnet: {{ item.data_subnet }}
nsgv_mac: '{{ item.nsgv_mac }}'
nsgv_host_name: {{ item.nsgv_hostname }}
{% endif %}
{% if item.nsgv_fqdn is defined %}
nsgv_fqdn: {{ item.nsgv_fqdn }}
{% endif %}
vsd_fqdn: {{ item.vsd_fqdn }}

{% if item.target_server_type | match("kvm") %}
qcow2_path: {{ qcow2_path|default('qcow2_path not defined') }}
qcow2_file_name: {{ qcow2_file_name|default('qcow2_file_name not defined') }}
{% endif %}
{% if item.target_server_type | match("vcenter") %}
ova_path: {{ ova_path|default('ova_path not defined') }}
ova_file_name: {{ ova_file_name|default('ova_file_name not defined') }}
{% if item.vcenter is defined -%}
    {% set item_vcenter = item.vcenter %}
{% else -%}
    {% set item_vcenter = vcenter %}
{% endif -%}
vcenter:
  username: {{ item_vcenter.username | default('NONE') }}
  password: {{ item_vcenter.password | default('NONE') }}
  datacenter: {{ item_vcenter.datacenter | default('NONE') }}
  cluster: {{ item_vcenter.cluster | default('NONE') }}
  datastore: {{ item_vcenter.datastore | default('NONE') }}
  resource_pool: {{ item_vcenter.resource_pool | default('NONE') }}
{% endif %}

{% endif %}

{% if item.target_server_type | match("aws") %}
aws_region: "{{ item.aws_region }}"
aws_ami_id: "{{ item.aws_ami_id }}"
aws_instance_type: "{{ item.aws_instance_type | default('t2.medium') }}"
aws_key_name: "{{ item.aws_key_name }}"
aws_mgmt_eni: "{{ item.aws_mgmt_eni }}"
aws_data_eni: "{{ item.aws_data_eni }}"
{% endif %}
