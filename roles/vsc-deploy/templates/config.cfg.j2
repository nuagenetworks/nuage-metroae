exit all
configure

#--------------------------------------------------
echo "System Configuration"
#--------------------------------------------------
    system
        name {{ system_name | default(inventory_hostname) }}
        time
            ntp
                ntp-server
            {% for ntp_server in ntp_server_list %}
                server {{ ntp_server }}
            {% endfor %}
                no shutdown
            exit
        exit
    exit
#--------------------------------------------------
#echo "System Security Configuration"
#--------------------------------------------------
    system
        security
            tls-profile "vsc-tls-profile" create
                shutdown
            exit
        exit
    exit
#--------------------------------------------------
echo "Virtual Switch Controller Configuration"
#--------------------------------------------------
    vswitch-controller
        xmpp-server "{{ xmpp.username }}@{{ vsd_fqdn }}"
    exit

#--------------------------------------------------
echo "Router (Network Side) Configuration"
#--------------------------------------------------
    router
        interface control
        {% if vsc_control_ip is defined %}
            address {{ vsc_control_ip }}/24
            no shutdown
        {% endif %}
        exit
        interface system
        {% if system_ip is defined %}
            address {{ system_ip }}/32
            no shutdown
        {% else %}
            shutdown
        {% endif %}
        exit
        {% if as_number %}
        autonomous-system {{ as_number }}
        {% endif %}
        {% if router_id is defined or system_ip is defined or vsc_control_ip is defined %}
        router-id {{ router_id | default( system_ip | default(vsc_control_ip)) }}
        {% endif %}
#--------------------------------------------------
#echo "Static Route Configuration"
##--------------------------------------------------
        {% for vsc_item in groups['vscs'] %}
          {% if vsc_item != inventory_hostname %}
            {% if hostvars[vsc_item].system_ip is defined %}
              {% if hostvars[vsc_item].system_ip != system_ip %}
        static-route {{ hostvars[vsc_item].system_ip }}/32 next-hop {{ vsc_control_ip }}
              {% endif %}
            {% endif %}
          {% endif %}
        {% endfor %}
#--------------------------------------------------
#echo "BGP Configuration"
##--------------------------------------------------
        bgp
            connect-retry 2
            min-route-advertisement 1
            outbound-route-filtering
                extended-community
                    send-orf
                exit
            exit
            rapid-withdrawal
            rapid-update evpn
            group internal
                type internal
                {% for vsc_item in groups['vscs'] %}
                  {% if vsc_item != inventory_hostname %}
                neighbor {{ hostvars[vsc_item].system_ip | default( hostvars[vsc_item].vsc_control_ip ) }}
                exit
                  {% endif %}
                {% endfor %}
                family evpn
            exit
        exit
    exit
exit
exit all
