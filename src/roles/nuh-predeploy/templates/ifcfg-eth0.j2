DEVICE="eth0"
{% if enable_ipv6 | default(False) %}
IPV6INIT="yes"
IPV6ADDR="{{ mgmt_ip }}/{{ mgmt_prefix }}"
IPV6_DEFAULTGW="{{ mgmt_gateway }}"
{% else %}
IPV6INIT="no"
IPADDR="{{ mgmt_ip }}"
PREFIX="{{ mgmt_prefix }}"
GATEWAY="{{ mgmt_gateway }}"
{% endif %}
NM_CONTROLLED="no"
ONBOOT="yes"
TYPE="Ethernet"
BOOTPROTO="static"
{% if dns_server_list is defined and dns_server_list %}
DNS1="{{dns_server_list[0]}}"
{% endif %}
{% if dns_server_list[1] is defined %}
DNS2="{{dns_server_list[1]}}"
{% endif %}
DOMAIN="{{ dns_domain }}"
