###############################################################################
# NETCONF Managers
#
# Configuration for Netconf Manager.
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if netconfmanagers is defined and netconfmanagers %}
{% for item in netconfmanagers %}
#
# NetconfManager {{ loop.index }}
#
-
    ##### Server Details

    # < NETCONF Server IP or FQDN >
    # Hostname or IP address of the machine where NETCONF manager will be installed
    #
    netconf_server: "{{ item.netconf_server }}"

    # < Email address >
    # Email address to configure netconf server with
    #
    {%- if item.email is defined %}
    email: "{{ item.email }}"
    {%- else %}
    # email: ""
    {%- endif %}

    # < First name >
    # First name of the NETCONF manager user
    #
    {%- if item.first_name is defined %}
    first_name: "{{ item.first_name }}"
    {%- else %}
    # first_name: ""
    {%- endif %}

    # < Last name >
    # Last name of the NETCONF manager user
    #
    {%- if item.last_name is defined %}
    last_name: "{{ item.last_name }}"
    {%- else %}
    # last_name: ""
    {%- endif %}

    ####################

{% endfor %}
{% else %}
[ ]
{% endif %}
