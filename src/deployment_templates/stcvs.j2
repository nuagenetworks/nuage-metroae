###############################################################################
# STCv
#
# Specify configuration for STCv VMs.
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if stcvs is defined and stcvs %}
{% for item in stcvs %}
#
# STCv {{ loop.index }}
#
-
    # < Target Server IP or FQDN >
    # Hostname or IP address of the KVM hypervisor where the STCv VM will be instantiated
    #
    target_server: "{{ item.target_server }}"

    ##### Target Server

    # < Target Server Type >
    # Type of hypervisor environment into which the instance will be created
    # (kvm, vcenter) 
    #
    {%- if item.target_server_type is defined %}
    target_server_type: "{{ item.target_server_type }}"
    {%- else %}
    # target_server_type: ""
    {%- endif %}

    # < VM Hostname >
    # Hostname to apply to the STCv VM
    #
    hostname: "{{ item.hostname }}"

    # < VM Management IP >
    # IP address to apply to the management interface of the STCv VM
    #
    mgmt_ip: "{{ item.mgmt_ip }}"

    # < VM Management Gateway >
    # IP address of the network gateway for the management interface of the STCv VM
    #
    mgmt_gateway: "{{ item.mgmt_gateway }}"

    # < Management Network Prefix Length >
    # Network prefix length for the STCv management interface
    #
    mgmt_ip_prefix: {{ item.mgmt_ip_prefix }}

    # < Management Bridge >
    # Bridge to connect the management interface of the STCv VM
    #
    {%- if item.mgmt_bridge is defined %}
    mgmt_bridge: "{{ item.mgmt_bridge }}"
    {%- else %}
    # mgmt_bridge: ""
    {%- endif %}

    # < Data Bridge 1 >
    # Bridge to connect the first data interface of the STCv VM
    #
    {%- if item.data_bridge1 is defined %}
    data_bridge1: "{{ item.data_bridge1 }}"
    {%- else %}
    # data_bridge1: ""
    {%- endif %}

    # < Data Bridge 2 >
    # Bridge to connect the second data interface of the STCv VM
    #
    {%- if item.data_bridge2 is defined %}
    data_bridge2: "{{ item.data_bridge2 }}"
    {%- else %}
    # data_bridge2: ""
    {%- endif %}

    # < Image path >
    # Path to the STCv qcow2 image on the target server
    #
    {%- if item.stcv_destination_image_path is defined %}
    stcv_destination_image_path: "{{ item.stcv_destination_image_path }}"
    {%- else %}
    # stcv_destination_image_path: ""
    {%- endif %}

    # < VM VCPUs >
    # Number of vCPUs to apply to the STCv VM
    #
    {%- if item.vcpus is defined %}
    vcpus: {{ item.vcpus }}
    {%- else %}
    # vcpus: ""
    {%- endif %}

    # < VM RAM >
    # Amount of RAM to apply to the STCv VM
    #
    {%- if item.ram is defined %}
    ram: {{ item.ram }}
    {%- else %}
    # ram: ""
    {%- endif %}

{% endfor %}
{% else %}
[ ]
{% endif %}
