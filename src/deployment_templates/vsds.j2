###############################################################################
# Virtualized Services Directory
#
# Specify configuration for Nuage VSDs.
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if vsds is defined and vsds %}
{% for item in vsds %}
#
# VSD {{ loop.index }}
#
-
    ##### Management Interface

    # < Hostname >
    # VSD Hostname
    #
    hostname: "{{ item.hostname }}"

    # < Management IP Address >
    # Management IP of VSD
    #
    mgmt_ip: "{{ item.mgmt_ip }}"

    # < Management Network Prefix Length >
    # Management network prefix length for VSD
    #
    mgmt_ip_prefix: {{ item.mgmt_ip_prefix }}

    # < Management Network Gateway >
    # Management network gateway for VSD
    #
    mgmt_gateway: "{{ item.mgmt_gateway }}"

    ##########################

    # < VM name >
    # Name of the Virtual Machine on the Hypervisor
    #
    {%- if item.vmname is defined %}
    vmname: "{{ item.vmname }}"
    {%- else %}
    # vmname: (Hostname)
    {%- endif %}

    # < Upgrade VM Name >
    # Virtual Machine name of the new VSD. Used during Upgrade only
    #
    {%- if item.upgrade_vmname is defined %}
    upgrade_vmname: "{{ item.upgrade_vmname }}"
    {%- else %}
    # upgrade_vmname: ""
    {%- endif %}

    ##### Target Server

    # < Target Server Type >
    # Type of hypervisor environment into which the instance will be created
    # (kvm, vcenter, aws, openstack, nuagex) 
    #
    target_server_type: "{{ item.target_server_type }}"

    # < Target Server IP or FQDN >
    # Hostname or IP address of the hypervisor where VM  will be instantiated. In the case of deployment in a vCenter environment, this will be the FQDN of the vCenter Server
    #
    target_server: "{{ item.target_server }}"

    ###################

    # < Management Network Bridge >
    # Network Bridge used for the management interface of this component. This will be a Distributed Virtual PortGroup (DVPG) when deploying on vCenter or a Linux network bridge when deploying on KVM. Defaults to the global setting
    #
    {%- if item.mgmt_bridge is defined %}
    mgmt_bridge: "{{ item.mgmt_bridge }}"
    {%- else %}
    # mgmt_bridge: (global Bridge interface)
    {%- endif %}

    ##### vCenter Parameters

    # < vCenter Datacenter Name >
    # Name of the vCenter Datacenter on which the VSD VM will be deployed. Defaults to the common vCenter Datacenter Name if not defined here.
    #
    {%- if item.vcenter_datacenter is defined %}
    vcenter_datacenter: "{{ item.vcenter_datacenter }}"
    {%- else %}
    # vcenter_datacenter: (global vCenter Datacenter Name)
    {%- endif %}

    # < vCenter Cluster Name >
    # Name of the vCenter Cluster on which the VSD VM will be deployed. Defaults to the common vCenter Cluster Name if not defined here.
    #
    {%- if item.vcenter_cluster is defined %}
    vcenter_cluster: "{{ item.vcenter_cluster }}"
    {%- else %}
    # vcenter_cluster: (global vCenter Cluster Name)
    {%- endif %}

    # < vCenter Host Reference >
    # Requires ovftool 4.3. Reference to the host on the vCenter cluster on which to deploy Nuage components
    #
    {%- if item.vcenter_host_reference is defined %}
    vcenter_host_reference: "{{ item.vcenter_host_reference }}"
    {%- else %}
    # vcenter_host_reference: (global vCenter Host Reference)
    {%- endif %}

    # < vCenter Datastore Name >
    # Name of the vCenter Datastore on which the VSD VM will be deployed. Defaults to the common vCenter Datastore Name if not defined here.
    #
    {%- if item.vcenter_datastore is defined %}
    vcenter_datastore: "{{ item.vcenter_datastore }}"
    {%- else %}
    # vcenter_datastore: (global vCenter Datastore Name)
    {%- endif %}

    ########################

    ##### AWS Parameters

    # < AWS Region >
    # Only applicable for AWS deployments
    #
    {%- if item.aws_region is defined %}
    aws_region: "{{ item.aws_region }}"
    {%- else %}
    # aws_region: ""
    {%- endif %}

    # < AWS VSD AMI ID >
    # AMI ID for AWS instance
    #
    {%- if item.aws_ami_id is defined %}
    aws_ami_id: "{{ item.aws_ami_id }}"
    {%- else %}
    # aws_ami_id: ""
    {%- endif %}

    # < Upgrade AWS VSD AMI ID >
    # AMI VSD ID of the latest VSD release. Used only during an upgrade
    #
    {%- if item.aws_upgrade_ami_id is defined %}
    aws_upgrade_ami_id: "{{ item.aws_upgrade_ami_id }}"
    {%- else %}
    # aws_upgrade_ami_id: ""
    {%- endif %}

    # < AWS Instance Type >
    # Instance Type to be used for a VSD instance
    #
    {%- if item.aws_instance_type is defined %}
    aws_instance_type: "{{ item.aws_instance_type }}"
    {%- else %}
    # aws_instance_type: ""
    {%- endif %}

    # < AWS Keypair Name >
    # Name of the Keypair used to connect to AWS instances
    #
    {%- if item.aws_key_name is defined %}
    aws_key_name: "{{ item.aws_key_name }}"
    {%- else %}
    # aws_key_name: ""
    {%- endif %}

    # < AWS Management ENI ID >
    # ENI ID for VSD Instance on Management Subnet
    #
    {%- if item.aws_mgmt_eni is defined %}
    aws_mgmt_eni: "{{ item.aws_mgmt_eni }}"
    {%- else %}
    # aws_mgmt_eni: ""
    {%- endif %}

    ####################

    ##### OpenStack Parameters

    # < OpenStack Image >
    # Name of image installed on OpenStack for VSD
    #
    {%- if item.openstack_image is defined %}
    openstack_image: "{{ item.openstack_image }}"
    {%- else %}
    # openstack_image: ""
    {%- endif %}

    # < OpenStack Flavor >
    # Name of instance flavor installed on OpenStack for VSD
    #
    {%- if item.openstack_flavor is defined %}
    openstack_flavor: "{{ item.openstack_flavor }}"
    {%- else %}
    # openstack_flavor: ""
    {%- endif %}

    # < OpenStack Network >
    # Name of network on OpenStack for VSD
    #
    {%- if item.openstack_network is defined %}
    openstack_network: "{{ item.openstack_network }}"
    {%- else %}
    # openstack_network: ""
    {%- endif %}

    # < OpenStack Subnet >
    # Name of subnet on OpenStack for VSD
    #
    {%- if item.openstack_subnet is defined %}
    openstack_subnet: "{{ item.openstack_subnet }}"
    {%- else %}
    # openstack_subnet: ""
    {%- endif %}

    # < OpenStack Port Name >
    # Name for Mgmt interface
    #
    {%- if item.openstack_port_name is defined %}
    openstack_port_name: "{{ item.openstack_port_name }}"
    {%- else %}
    # openstack_port_name: ""
    {%- endif %}

    # < OpenStack Port Security Groups >
    # Set of security groups to associate with Mgmt interface
    #
    {%- if item.openstack_port_security_groups is defined %}
    openstack_port_security_groups: [ {% for i in item.openstack_port_security_groups | default([]) %}"{{ i }}", {% endfor %}]
    {%- else %}
    # openstack_port_security_groups: []
    {%- endif %}

    ##########################

    # < KVM cpuset information >
    # Cpuset information for cpu pinning on KVM. For example, VSD requires 6 cores and sample values will be of the form [ 0, 1, 2, 3, 4, 5 ]
    #
    {%- if item.cpuset is defined %}
    cpuset: [ {% for i in item.cpuset | default([]) %}{{ i }}, {% endfor %}]
    {%- else %}
    # cpuset: []
    {%- endif %}

    # < Failed login attempts >
    # Lockout the user after reaching the number of failed login attempts
    #
    {%- if item.failed_login_attempts is defined %}
    failed_login_attempts: {{ item.failed_login_attempts }}
    {%- else %}
    # failed_login_attempts: ""
    {%- endif %}

    # < Failed login lockout time >
    # Lockout time after failed login attemps
    #
    {%- if item.failed_login_lockout_time is defined %}
    failed_login_lockout_time: {{ item.failed_login_lockout_time }}
    {%- else %}
    # failed_login_lockout_time: ""
    {%- endif %}

    # < Advanced API Access Logging >
    # Enables advance API access logging
    #
    {%- if item.adavanced_api_access_logging is defined %}
    adavanced_api_access_logging: {{ item.adavanced_api_access_logging | lower }}
    {%- else %}
    # adavanced_api_access_logging: ""
    {%- endif %}

    # < TLS version >
    # TLS version to use
    # (1.0, 1.2) 
    #
    {%- if item.tls_version is defined %}
    tls_version: "{{ item.tls_version }}"
    {%- else %}
    # tls_version: ""
    {%- endif %}

    # < Path to root certificate pem file >
    # Path to root certificate pem file
    #
    {%- if item.root_cert_path is defined %}
    root_cert_path: "{{ item.root_cert_path }}"
    {%- else %}
    # root_cert_path: ""
    {%- endif %}

    # < Path to intermediate certificate pem file >
    # Path to intermediate certificate pem file
    #
    {%- if item.intermediate_cert_path is defined %}
    intermediate_cert_path: "{{ item.intermediate_cert_path }}"
    {%- else %}
    # intermediate_cert_path: ""
    {%- endif %}

    # < Path to certificate pem file >
    # Path to certificate pem file
    #
    {%- if item.cert_path is defined %}
    cert_path: "{{ item.cert_path }}"
    {%- else %}
    # cert_path: ""
    {%- endif %}

{% endfor %}
{% else %}
[ ]
{% endif %}
