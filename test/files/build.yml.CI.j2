---
# See BUILD.md for details

# First set of tasks is to gather_facts so that subsequent task list can use these facts as part of variable setting
- hosts: localhost
  gather_facts: yes
  tasks: []

# Actual tasks to generate build configuration
- hosts: localhost
  roles:
    - ci-build
  vars:
    mycis:
      - { hostname: {{ host_name }},
          target_server_type: "heat",
          ci_image: jen-centos7,
          ci_flavor: jenkins }
      - { hostname: {{ vrs_u14_host_name }},
          target_server_type: "heat",
          ci_image: jen-ubuntu14,
          ci_flavor: m1.medium }
      - { hostname: {{ vrs_u16_host_name }},
          target_server_type: "heat",
          ci_image: jen-ubuntu16,
          ci_flavor: m1.medium }

    ansible_deployment_host: 10.106.0.2
    os_auth:
     username: admin
     password: admin
     project_name: jen
     auth_url: 'http://10.0.0.4:5000/v2.0'
    ntp_server_list:
      - 135.227.181.232
      - 135.227.181.233
      - 10.106.0.3
      - pool.ntp.org
        
